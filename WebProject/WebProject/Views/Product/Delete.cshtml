@model WebProject.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">

    <h3>Ürünü Silmek İstediğinizden Emin misiniz?</h3>
    <div>

        <hr />
        <dl class="dl-horizontal">


            <dt>
                Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Resim
            </dt>

            <dd>
                @Html.DisplayFor(model => model.İmage)
                <img src="~/Content/image/@Model.İmage" width="50" height="40" />
            </dd>

            <dt>
                Fiyat
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                Adet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Stok)
            </dd>

            <dt>
                Slayt
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Slider)
            </dd>

            <dt>
                Anasayfa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsHome)
            </dd>

            <dt>
                Popüler
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsFeatured)
            </dd>

            <dt>
                Onaylı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsApproved)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-primary" />
                @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-warning" })
            </div>
        }
    </div>
    </section>
